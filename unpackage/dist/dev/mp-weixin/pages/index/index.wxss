view {
  color: orange;
  margin-top: 15px;
}
.layout .partA {
  width: 100px;
  height: 100px;
  background: #ccc;
}
.layout .partA .a-child {
  width: 50px;
  height: 50px;
  background: red;
}
.layout .partA .hover_partaa {
  background: orange;
}
.layout .hover_partA {
  background: Green;
}
.layout .partB {
  color: green;
}
.layout .line {
  width: 100%;
  height: 2px;
  background: green;
  margin: 15px 2px;
  text-align: center;
  color: red;
  font-weight: 600;
}
.layout .scroll_part {
  margin: 0 auto;
  width: 90%;
  height: 50px;
  border: 1px solid #ccc;
  white-space: nowrap;
}
.layout .scroll_part .scroll_inner {
  width: 100px;
  height: 20px;
  background: green;
  display: inline-block;
  margin: 5px;
}
.layout swiper {
  width: 100vw;
  height: 200rpx;
  border: 1px solid red;
  box-sizing: border-box;
}
.layout swiper-item {
  display: block;
  height: 300rpx;
  line-height: 200rpx;
  text-align: center;
}
.layout swiper-item image {
  width: 100%;
  height: 100%;
}
.layout swiper-item:nth-child(2n) {
  background: black;
}
.layout .image_part image {
  width: 100%;
}
.layout .is-hover {
  color: rgba(255, 255, 255, 0.6);
  background-color: #179b16;
  border-color: #179b16;
}
.layout .backTop {
  width: 100px;
  height: 100px;
  background-color: #179b16;
  position: fixed;
  right: 20px;
  bottom: 30px;
}